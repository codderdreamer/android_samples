<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#6c5ce7"
        android:hint="Faktoriyel hesaplanacak sayıyı giriniz!"
        android:background="@drawable/editarkaplan"
        />

    <Button
        android:id="@+id/hesaplaButonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonarkaplan"
        android:text="Faktöriyel Hesapla"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/sonucText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#e74c3c"
        android:gravity="center"
        />



</LinearLayout>