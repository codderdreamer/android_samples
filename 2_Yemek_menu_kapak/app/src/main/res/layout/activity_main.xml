<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#27ae60"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fad390"
            android:orientation="vertical"
            android:gravity="top|center"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/hamburger"
                android:layout_margin="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#eccc68"
                android:text="HAMBURGER"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"

                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8c291"
            android:orientation="vertical"
            android:gravity="top|center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/pasta"
                android:layout_margin="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ff7f50"
                android:text="PASTA"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#eb2f06"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6a89cc"
            android:orientation="vertical"
            android:gravity="top|center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/meyve"
                android:layout_margin="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#5352ed"
                android:text="MEYVE"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#82ccdd"
            android:orientation="vertical"
            android:gravity="center|top"
            android:layout_weight="1">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/icecek"
                android:layout_margin="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#70a1ff"
                android:text="İÇECEK"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>